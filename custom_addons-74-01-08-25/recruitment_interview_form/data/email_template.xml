<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_interview_form" model="mail.template">
            <field name="name">Interview Form Email</field>
            <field name="model_id" ref="model_hr_interview_form"/>
            <field name="subject">Interview Form</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">${object.partner_id.email_formatted or object.email}</field>
            <field name="description">Sent to candidate with interview form link</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.name or 'Candidate'">Candidate</t>,
                        <br/>
                        <br/>

                        You have been invited to fill out an interview form.
                        <br/>
                        Please click the button below or scan the QR code to access the form:
                    </p>

                    <div style="margin: 16px 0px 16px 0px;">
                        <a t-att-href="object.get_form_url()"
                           style="background-color: #875A7B; padding: 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                            Open Interview Form
                        </a>
                    </div>

                    <div>
                        <img t-att-src="object.get_qr_code_url()" alt="QR Code" style="max-width: 200px;"/>
                    </div>

                    <p>Thank you,<br/>HR Department
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
