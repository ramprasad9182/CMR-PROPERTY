<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_category_bill_form" model="ir.ui.view">
        <field name="name">catagory.bill.form</field>
        <field name="model">catagory.bill</field>
        <field name="arch" type="xml">
            <form string="Category Bill">
                <!--                <button name="action_sync_electric_data_to_lines"-->
                <!--                        type="object"-->
                <!--                        string="Sync Readings by Date"-->
                <!--                        class="btn-success"/>-->
                <sheet>
                    <group>
                        <group>
                            <!--                        <field name="name"/>-->
                            <field name="category"/>
                            <field name="ten"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="months" readonly="create_date"/>
                            <field name="is_invoice_created" readonly="1"/>
                            <field name="year" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Consumption">
                            <field name="ct_line_ids">
                                <list editable="bottom" create="false" delete="false">
                                    <field name="dt" readonly="1" force_save="1"/>
                                    <field name="open_unit" readonly="1"/>
                                    <field name="close_unit" readonly="1"/>
                                    <field name="reset_unit" readonly="1"/>
                                    <field name="consumption" readonly="1"/>
                                </list>
                            </field>
                            <div class="oe_subtotal_footer oe_right" style="margin-top: 10px; text-align:right;">
                                <label for="total" string="Total Consumption"/>
                                <field name="total" readonly="1" class="oe_subtotal"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="category_action_ten" model="ir.actions.act_window">
        <field name="name">Electric Units</field>
        <field name="res_model">catagory.bill</field>
        <field name="view_mode">list,form</field>
    </record>
    <!--    dg reading view-->
    <record id="view_dg_reading_form" model="ir.ui.view">
        <field name="name">dg.reading.form</field>
        <field name="model">dg.reading</field>
        <field name="arch" type="xml">
            <form string="DG Reading">
                <sheet>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="tenant_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="month" readonly="create_date"/>
                            <field name="year" readonly="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="DG Reading">
                            <field name="dg_line_ids">
                                <list editable="bottom" create="false" delete="false">
                                    <field name="date" readonly="1" force_save="1"/>
                                    <field name="opening_unit" readonly="1" force_save="1"/>
                                    <field name="closing_unit" readonly="1" force_save="1"/>
                                    <field name="reset_unit" force_save="1" readonly="1"/>
                                    <field name="consumption" readonly="1"/>
                                </list>
                            </field>
                            <div class="oe_subtotal_footer oe_right" style="margin-top: 10px; text-align:right;">
                                <label for="total_consumption" string="Total Consumption"/>
                                <field name="total_consumption" readonly="1" class="oe_subtotal"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action for DG Reading -->
    <record id="action_dg_reading" model="ir.actions.act_window">
        <field name="name">DG Reading</field>
        <field name="res_model">dg.reading</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="view_gas_reading_form" model="ir.ui.view">
        <field name="name">gas.reading.form</field>
        <field name="model">gas.reading</field>
        <field name="arch" type="xml">
            <form string="Gas Reading">
                <sheet>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="tenant_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="month" readonly="create_date"/>
                            <field name="year" readonly="1"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Daily Readings">
                            <field name="gas_line_ids">
                                <list editable="bottom" create="false" delete="false">
                                    <field name="date" widget="date"/>
                                    <field name="opening_unit" readonly="1"/>
                                    <field name="closing_unit" readonly="1"/>
                                    <field name="reset_unit" readonly="1"/>
                                    <field name="consumption" readonly="1"/>
                                    <field name="is_invoiced" readonly="1"/>
                                </list>
                            </field>
                            <div class="oe_subtotal_footer oe_right" style="margin-top: 10px; text-align:right;">
                                <label for="total_consumption" string="Total Consumption"/>
                                <field name="total_consumption" readonly="1" class="oe_subtotal"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action -->
    <record id="action_gas_reading" model="ir.actions.act_window">
        <field name="name">Gas Reading</field>
        <field name="res_model">gas.reading</field>
