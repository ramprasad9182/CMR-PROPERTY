<odoo>
    <data noupdate="0">
        <record id="email_template_applicant_appointment_letter_direct" model="mail.template">
            <field name="name">Applicant: Appointment Letter</field>
            <field name="model_id" ref="cmr_new_recruitments.model_employee_letter"/>
            <field name="subject">Appointment Letter for the Position: {{ object.designation_id.name }}</field>
            <field name="email_to">{{ (not object.employee_id and object.email_from or '') }}</field>
            <field name="partner_to">{{ object.employee_id.id or '' }}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590"
                       style="background-color: white; border-collapse: collapse; margin-left: 20px;">
                    <tr>
                        <td valign="top" style="padding: 0px 10px;">
                            <div style="font-size: 13px; margin: 0px; padding: 0px;">
                                Hello <t t-out="object.employee_id.name or ''">Applicant</t>,
                                <br/>
                                <br/>
                                Congratulations! We are pleased to inform you that you have been appointed for the
                                position of
                                "
                                <a t-att-href="hasattr(object.designation_id, 'website_url') and object.designation_id.website_url or ''"
                                   style="color:#9A6C8E;">
                                    <strong t-out="object.designation_id.name or ''">[Position]</strong>
                                </a>
                                ". We are confident that you will be a valuable asset to our team.
                                <br/>
                                <br/>
                                Please find your appointment letter attached. Kindly review the terms and conditions and
                                confirm your acceptance.
                                <br/>
                                <br/>
                                Meanwhile, feel free to reach out to <strong t-out="object.employee_id.name or ''">
                                YourCompany
                            </strong> via email or phone for any questions.
                                <br/>
                                <br/>
                                <div t-if="'website_url' in object.designation_id and object.designation_id.website_url"
                                     style="padding: 16px 8px 16px 8px;">
                                    <a t-att-href="object.designation_id.website_url"
                                       style="background-color: #875a7b; text-decoration: none; color: #fff; padding: 8px 16px 8px 16px; border-radius: 5px;">
                                        Job Description
                                    </a>
                                </div>

                                <hr width="97%"
                                    style="background-color: rgb(204,204,204); border: none; clear: both; display: block; font-size: 0; min-height: 1px; line-height: 0; margin: 16px 0;"/>

                                <t t-if="object.employee_id">
                                    <h3 style="color:#9A6C8E;">
                                        <strong>Your Contact:</strong>
                                    </h3>
                                    <table>
                                        <tr>
                                            <td width="75">
                                                <img t-attf-src="/web/image/res.users/{{ object.employee_id.id }}/avatar_128"
                                                     alt="Avatar"
                                                     style="vertical-align:baseline; width: 64px; height: 64px; object-fit: cover;"/>
                                            </td>
                                            <td>
                                                <strong t-out="object.employee_id.name or ''">HR Contact</strong>
                                                <br/>
                                                <span>Email:
                                                    <t t-out="object.employee_id.work_email or ''">
                                                        hr@yourcompany.example.com
                                                    </t>
                                                </span>
                                                <br/>
                                                <span>Phone:
                                                    <t t-out="object.employee_id.mobile_phone or ''">+1 650-123-4567</t>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                    <hr width="97%"
                                        style="background-color: rgb(204,204,204); border: none; clear: both; display: block; font-size: 0; min-height: 1px; line-height: 0; margin: 16px 0;"/>
                                </t>

                                We look forward to welcoming you to our team.

                                <hr width="97%"
                                    style="background-color: rgb(204,204,204); border: none; clear: both; display: block; font-size: 0; min-height: 1px; line-height: 0; margin: 17px 0;"/>

                                <t t-set="location" t-value="''"/>
                                <t t-if="object.designation_id.address_id.name">
                                    <strong t-out="object.designation_id.address_id.name or ''">Company Name</strong>
                                    <br/>
                                </t>
                                <t t-if="object.designation_id.address_id.street">
                                    <t t-out="object.designation_id.address_id.street or ''">123 Main St</t>
                                    <br/>
                                    <t t-set="location" t-value="object.designation_id.address_id.street"/>
                                </t>
                                <t t-if="object.designation_id.address_id.street2">
                                    <t t-out="object.designation_id.address_id.street2 or ''">Suite 100</t>
                                    <br/>
                                    <t t-set="location"
                                       t-value="'%s, %s' % (location, object.designation_id.address_id.street2)"/>
                                </t>
                                <t t-if="object.designation_id.address_id.city">
                                    <t t-out="object.designation_id.address_id.city or ''">City</t>,
                                    <t t-set="location"
                                       t-value="'%s, %s' % (location, object.designation_id.address_id.city)"/>
                                </t>
                                <t t-if="object.designation_id.address_id.state_id.name">
                                    <t t-out="object.designation_id.address_id.state_id.name or ''">State</t>,
                                    <t t-set="location"
                                       t-value="'%s, %s' % (location, object.designation_id.address_id.state_id.name)"/>
                                </t>
                                <t t-if="object.designation_id.address_id.zip">
                                    <t t-out="object.designation_id.address_id.zip or ''">ZIP</t>
                                    <t t-set="location"
                                       t-value="'%s, %s' % (location, object.designation_id.address_id.zip)"/>
                                </t>
                                <br/>
                                <t t-if="object.designation_id.address_id.country_id.name">
                                    <t t-out="object.designation_id.address_id.country_id.name or ''">Country</t>
                                    <br/>
                                    <t t-set="location"
                                       t-value="'%s, %s' % (location, object.designation_id.address_id.country_id.name)"/>
                                </t>
                                <br/>
                            </div>
                        </td>
                    </tr>
                </table>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>