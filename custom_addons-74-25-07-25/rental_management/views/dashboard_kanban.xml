<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_floor_plan_kanban" model="ir.ui.view">
        <field name="name">floor.plan.kanban</field>
        <field name="model">floor.plan</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" quick_create="false" kanban_disable_open="true">
                <field name="title"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div>
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <span t-out="record.title.value"/>
                                    </strong>
                                </div>
                            </div>
                            <div>
                                <div  style="width: 170px; height: 150px; padding-left:10px; overflow: hidden;  display: flex; align-items: center; justify-content: center;">
                                    <img alt="Avtar" t-att-src="kanban_image('floor.plan','image',record.id.raw_value)"
                                         style="width: 100%; height: 100%; object-fit: contain;"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
