<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="uc_group_invoice_report_view" model="ir.ui.view">
            <field name="name">rent.invoice.monthly.report</field>
            <field name="model">uc.group</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                             <field name="partner_id" options="{'no_create': True}" context="{'default_customer_rank': 1}"/>
                        </group>
                        <group>
                            <field name="to_date" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Print" type="object" class="btn btn-outline-success"
                                name="uc_group_record"/>
                        <button string="Cancel" special="cancel" class="btn btn-outline-danger"/>
                    </footer>
                </form>
            </field>
        </record>

     <record id="uc_group_report_action" model="ir.actions.act_window">
            <field name="name">UC Group Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">uc.group</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

     <menuitem name="UC Group Report"
              id="uc_group_monthly_id"
              parent="rental_management.menu_print_report"
              action="uc_group_report_action"
              sequence="4"/>
</odoo>