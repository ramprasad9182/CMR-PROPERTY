<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--        purchase History report -->
    <!--    commented no need for current requirement-->
    <template id="purchase_order_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <h3 style="text-align: center; margin: 0; font-weight: bold; font-family:Arial, Verdana,sans-serif;">
                    Purchase Order History
                </h3>
                <table class="table table-sm table-bordered"
                       style="width: 100%; margin: 0; padding: 0; font-size: 10px; border: 2px solid black; border-collapse: collapse; font-family: Arial, Verdana, sans-serif; text-align: center;">
                    <tr style="border: 1px solid black;">
                        <td style="border: 1px solid black;">PO Number</td>
                        <td style="border: 1px solid black;">PO Date</td>
                        <td style="border: 1px solid black;">Vendor</td>
                        <!--                        <td>Po Qty</td>-->
                        <td style="border: 1px solid black;">PO Total</td>
                        <td style="border: 1px solid black;">PO Status</td>
                        <td style="border: 1px solid black;">GRC No</td>
                        <td style="border: 1px solid black;">GRC Date</td>
                        <!--                        <td>GRC Qty</td>-->
                        <!--                        <td>Outstanding GRC Qty</td>-->
                        <td style="border: 1px solid black;">GRC Status</td>
                        <td style="border: 1px solid black;">Bill Reference</td>
                        <td style="border: 1px solid black;">Bill Date</td>
                        <td style="border: 1px solid black;">Bill Total</td>
                        <td style="border: 1px solid black;">Payment Reference</td>
                        <td style="border: 1px solid black;">Payment Date</td>
                        <td style="border: 1px solid black;">Payment Amount</td>
                        <td style="border: 1px solid black;">Remaining</td>
                    </tr>
                    <tr style="border: 1px solid black;">
                        <td>
                            <span t-esc="doc.name"/>
                        </td>
                        <td style="border: 1px solid black;">
                            <span t-esc="doc.date_approve"/>
                        </td>
                        <td style="border: 1px solid black;">
                            <span t-esc="doc.partner_id.name"/>
                        </td>
                        <td style="border: 1px solid black;">
                            <span t-esc="doc.amount_total"/>
                        </td>
                        <td style="border: 1px solid black;">
                            <span t-esc="doc.state"/>
                        </td>
                        <td style="border: 1px solid black;">
                            <t t-foreach="doc.picking_ids.filtered(lambda p: p.picking_type_id.code == 'incoming')"
                               t-as="receipt">
                                <div>
                                    <span t-esc="receipt.name"/>
                                </div> <!-- GRC No -->
                            </t>
                        </td>
                        <td style="border: 1px solid black;">
                            <t t-foreach="doc.picking_ids.filtered(lambda p: p.picking_type_id.code == 'incoming')"
                               t-as="receipt">
                                <div>
                                    <span t-esc="receipt.scheduled_date"/>
                                </div> <!-- GRC Date -->
                            </t>
                        </td>
                        <td style="border: 1px solid black;">
                            <t t-foreach="doc.picking_ids.filtered(lambda p: p.picking_type_id.code == 'incoming')"
                               t-as="receipt">
                                <div>
                                    <span t-esc="receipt.state"/>
                                </div> <!-- GRC Status -->
                            </t>
                        </td>
                        <td style="border: 1px solid black;">
                            <!-- Vendor Name -->
                            <t t-foreach="doc.invoice_ids" t-as="invoice">
                                <div>
                                    <span t-esc="invoice.name"/>
                                </div>
                            </t>
                        </td>
                        <td style="border: 1px solid black;">
                            <!-- Vendor Bill Date -->
                            <t t-foreach="doc.invoice_ids" t-as="invoice">
                                <div>
                                    <span t-esc="invoice.invoice_date"/>
                                </div>
                            </t>
                        </td>
                        <td style="border: 1px solid black;">
                            <!-- Vendor Bill Amount -->
                            <t t-foreach="doc.invoice_ids" t-as="invoice">
                                <div>
                                    <span t-esc="invoice.amount_total"/>
                                </div>
                            </t>
                        </td>
                        <td style="border: 1px solid black;">
                            <t t-if="doc and doc.id">
                                <t t-set="payments"
                                   t-value="env['account.payment'].search([('memo', '=', invoice.name)])"/>
                                <t t-foreach="payments" t-as="payment">
                                    <div>
                                        <span t-esc="payment.name or 'No Reference'"/>
                                    </div>
                                </t>
                            </t>
                        </td>
                        <td style="border: 1px solid black;">

                            <t t-if="doc and doc.id">
                                <t t-set="payments"
                                   t-value="env['account.payment'].search([('memo', '=', invoice.name)])"/>
                                <t t-foreach="payments" t-as="payment">
                                    <div>
                                        <span t-esc="payment.date"/>
                                    </div>
                                </t>
                            </t>
                        </td>
                        <td style="border: 1px solid black;">

                            <t t-if="doc and doc.id">
                                <t t-set="payments"
                                   t-value="env['account.payment'].search([('memo', '=', invoice.name)])"/>
                                <t t-foreach="payments" t-as="payment">
                                    <div>
                                        <span t-esc="payment.amount"/>
                                    </div>
                                </t>
                            </t>
                        </td>
                        <td>
                        </td>
                    </tr>
                </table>
            </t>
        </t>
    </template>
    <record id="purchase_history_rec" model="ir.actions.report">
        <field name="name">Purchase History</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nhcl_rental_management.purchase_order_report_template</field>
        <field name="report_file">nhcl_rental_management.purchase_order_report_template</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="paperformat_id" ref="nhcl_rental_management.paperformat_po_report"/>
    </record>
    <!--    for all the purchase order report-->
    <template id="purchase_order_history_report_template">
        <t t-call="web.html_container">
            <t t-set="docs" t-value="env['purchase.order'].search([('state','=','purchase')])"/>
            <h3 style="text-align: center;">Purchase Order History Report</h3>
            <table style="width: 100%; margin: 0; padding: 0; font-size: 10px; border: 2px solid black; border-collapse: collapse; font-family: Arial, Verdana, sans-serif;">
                <thead>
                    <tr>
                        <th style="border: 1px solid black;">PO Number</th>
                        <th style="border: 1px solid black;">PO Date</th>
                        <th style="border: 1px solid black;">Vendor</th>
                        <th style="border: 1px solid black;">Total Amount</th>
                        <th style="border: 1px solid black;">Status</th>
                        <th style="border: 1px solid black;">GRC No</th>
                        <th style="border: 1px solid black;">GRC Date</th>
                        <th style="border: 1px solid black;">GRC Status</th>
                        <th style="border: 1px solid black;">Bill Reference</th>
                        <th style="border: 1px solid black;">Bill Date</th>
                        <th style="border: 1px solid black;">Bill Total</th>
                        <th style="border: 1px solid black;">Payment Reference</th>
                        <th style="border: 1px solid black;">Payment Date</th>
                        <th style="border: 1px solid black;">Payment Amount</th>
                        <th style="border: 1px solid black;">Remaining</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td style="border: 1px solid black;">
                                <span t-esc="doc.name"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="doc.date_approve or 'N/A'"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="doc.partner_id.name or 'N/A'"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="doc.amount_total"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <span t-esc="doc.state"/>
                            </td>
                            <td style="border: 1px solid black;">
                                <t t-foreach="doc.picking_ids.filtered(lambda p: p.picking_type_id.code == 'incoming')"
                                   t-as="receipt">
                                    <div>
                                        <span t-esc="receipt.name"/>
                                    </div> <!-- GRC No -->
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                                <t t-foreach="doc.picking_ids.filtered(lambda p: p.picking_type_id.code == 'incoming')"
                                   t-as="receipt">
                                    <div>
                                        <span t-esc="receipt.scheduled_date"/>
                                    </div> <!-- GRC Date -->
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                                <t t-foreach="doc.picking_ids.filtered(lambda p: p.picking_type_id.code == 'incoming')"
                                   t-as="receipt">
                                    <div>
                                        <span t-esc="receipt.state"/>
                                    </div> <!-- GRC Status -->
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                                <!-- Vendor Name -->
                                <t t-foreach="doc.invoice_ids" t-as="invoice">
                                    <div>
                                        <span t-esc="invoice.name"/>
                                    </div>
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                                <!-- Vendor Bill Date -->
                                <t t-foreach="doc.invoice_ids" t-as="invoice">
                                    <div>
                                        <span t-esc="invoice.invoice_date"/>
                                    </div>
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                                <!-- Vendor Bill Amount -->
                                <t t-foreach="doc.invoice_ids" t-as="invoice">
                                    <div>
                                        <span t-esc="invoice.amount_total"/>
                                    </div>
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                                <t t-if="doc.invoice_ids">
                                    <t t-foreach="doc.invoice_ids" t-as="invoice">
                                        <div>
                                            <t t-set="payments"
                                               t-value="env['account.payment'].search(['|', ('memo', '=', invoice.name), ('memo', '=', invoice.ref)])"/>
                                            <t t-if="payments">
                                                <t t-foreach="payments" t-as="payment">
                                                    <span t-esc="payment.name or 'No Reference'"/>
                                                </t>
                                            </t>
                                        </div>
                                    </t>
                                </t>
                                <t t-else="">
                                    <span>No Invoice</span>
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                                <t t-if="doc.invoice_ids">
                                    <t t-foreach="doc.invoice_ids" t-as="invoice">
                                        <div>
                                            <t t-set="payments"
                                               t-value="env['account.payment'].search(['|', ('memo', '=', invoice.name), ('memo', '=', invoice.ref)])"/>
                                            <t t-if="payments">
                                                <t t-foreach="payments" t-as="payment">
                                                    <span t-esc="payment.date or 'No date'"/>
                                                </t>
                                            </t>
                                        </div>
                                    </t>
                                </t>
                                <t t-else="">
                                    <span>No Date</span>
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                                <t t-if="doc.invoice_ids">
                                    <t t-foreach="doc.invoice_ids" t-as="invoice">
                                        <div>
                                            <t t-set="payments"
                                               t-value="env['account.payment'].search(['|', ('memo', '=', invoice.name), ('memo', '=', invoice.ref)])"/>
                                            <t t-if="payments">
                                                <t t-foreach="payments" t-as="payment">
                                                    <span t-esc="payment.amount or 'No date'"/>
                                                </t>
                                            </t>
                                        </div>
                                    </t>
                                </t>
                                <t t-else="">
                                    <span>No Amount</span>
                                </t>
                            </td>
                            <td style="border: 1px solid black;">
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>
    <record id="action_purchase_order_history_report" model="ir.actions.report">
        <field name="name">Purchase Order History Report</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nhcl_rental_management.purchase_order_history_report_template</field>
        <field name="report_file">nhcl_rental_management.purchase_order_history_report_template</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="paperformat_id" ref="custom_paperformat_purchase_history"/>
    </record>

</odoo>