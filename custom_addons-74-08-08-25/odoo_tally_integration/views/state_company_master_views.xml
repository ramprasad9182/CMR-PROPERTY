<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="view_state_master_model_list" model="ir.ui.view">
        <field name="name">state.master.list</field>
        <field name="model">state.master</field>
        <field name="arch" type="xml">
            <list string="State Master">
                <field name="state_id"/>
                <field name="company_name"/>
            </list>
        </field>
    </record>

    <record id="view_state_master_model_form" model="ir.ui.view">
        <field name="name">state.master.form</field>
        <field name="model">state.master</field>
        <field name="arch" type="xml">
            <form string="State Master">
                <sheet>
                    <group>
<!--                        <field name="country_id" invisible="1"/>-->
                        <field name="state_id"/>
                         <field name="company_name"/>
                        <field name="tally_company_code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_nhcl_master_state_dynamic_data" model="ir.actions.act_window">
        <field name="name">State Master</field>
        <field name="res_model">state.master</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="nhcl_state_master_config"
        name="NHCL State Master Setup"
        parent="base.menu_administration"
        sequence="111"
        />

    <menuitem
        id="menu_nhcl_master_state_data"
        name="State Master"
        parent="nhcl_state_master_config"
        action="action_nhcl_master_state_dynamic_data"
        sequence="20"
        />


    <record id="view_account_analytic_account_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.account.form.inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <!-- Add after an existing field or group -->
            <xpath expr="//field[@name='plan_id']" position="after">
                <field name="acc_state_id"/>
                <field name="nhcl_company_name" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>











</odoo>

